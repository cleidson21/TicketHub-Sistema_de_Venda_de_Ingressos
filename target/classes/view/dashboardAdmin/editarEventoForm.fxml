<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.dashboardAdmin.EditarEventoController">
   <children>
      <VBox alignment="CENTER" prefHeight="350" prefWidth="300" spacing="15">
         <Label styleClass="title" text="Editar Evento" />

         <TextField fx:id="nomeEventoField" prefWidth="278.0" styleClass="text-field">
            <VBox.margin>
               <Insets left="15.0" right="15.0" />
            </VBox.margin>
         </TextField>
         <TextField fx:id="descricaoEventoField" styleClass="text-field">
            <VBox.margin>
               <Insets left="15.0" right="15.0" />
            </VBox.margin>
         </TextField>
         <DatePicker fx:id="dataEventoField" />
         <TextField fx:id="colunasField" promptText="Número de Colunas" styleClass="text-field" disable="true">
            <VBox.margin>
               <Insets left="15.0" right="15.0" />
            </VBox.margin>
         </TextField>
         <TextField fx:id="fileirasField" promptText="Número de Fileiras" styleClass="text-field" disable="true">
            <VBox.margin>
               <Insets left="15.0" right="15.0" />
            </VBox.margin>
         </TextField>

         <HBox alignment="CENTER" spacing="10">
            <Button fx:id="editarButton" styleClass="action-button" text="Editar Evento">
               <HBox.margin>
                  <Insets bottom="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="cancelarButton"  styleClass="menu-button-sair" text="Cancelar">
               <HBox.margin>
                  <Insets bottom="10.0" />
               </HBox.margin>
            </Button>
         </HBox>
      </VBox>
   </children>
</AnchorPane>
