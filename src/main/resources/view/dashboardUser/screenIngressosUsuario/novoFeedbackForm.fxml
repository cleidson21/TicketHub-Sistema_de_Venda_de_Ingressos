               <RadioButton text="5" />
               <RadioButton text="6" />
               <RadioButton text="7" />
               <RadioButton text="8" />
               <RadioButton text="9" />
               <RadioButton text="10" />
            </children>
         </HBox>
         <TextArea fx:id="comentario" prefHeight="108.0" prefWidth="290.0" promptText="Escreva seu comentÃ¡rio..." wrapText="true">
            <VBox.margin>
               <Insets left="15.0" right="15.0" />
            </VBox.margin></TextArea>
         <HBox spacing="10">
            <Button alignment="CENTER" contentDisplay="CENTER" onAction="#handleFinalizarFeedback" styleClass="action-button" text="Enviar" textAlignment="CENTER">
               <HBox.margin>
                  <Insets left="70.0" />
               </HBox.margin></Button>
            <Button onAction="#handleCancelar" styleClass="menu-button-sair" text="Cancelar" />
         </HBox>
      </VBox>
   </children>
</AnchorPane>
